    <!-- banner statistic area start -->
    <div class="banner-statistics">
        <div class="container">
            <div class="row no-gutters mtn-30">
                @foreach (var shoes in Model.Shoes)
                {
                    <div class="col-md-6">
                        <div class="img-container mt-30">
                            <a href="product-details.html">
                                <img src="assets/img/banner/@shoes.Image" alt="banner-image">
                            </a>
                            <div class="banner-text">
                                <h5 class="banner-subtitle">@shoes.SubTitle</h5>
                                <h3 class="banner-title">@Html.Raw(shoes.Title)</h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- banner statistic area end -->
    <!-- top seller area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.TopSellers.Title</h2>
                        <p class="sub-title">@Model.TopSellers.Desc</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a href="#">
                            <img src="assets/img/banner/@Model.TopImages.Image" alt="product banner">
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        @foreach (var top in Model.TopProducts)
                        {
                            <!-- product item start -->
                            <div class="slide-item">
                                <div class="pro-item-small mt-30">
                                    <div class="product-thumb">
                                        <a asp-controller="ProductDetail" asp-action="Index">
                                            <img src="assets/img/product/@top.Image" alt="">
                                        </a>
                                    </div>
                                    <div class="pro-small-content">
                                        <h6 class="product-name">
                                            <a href="product-details.html">@top.Name</a>
                                        </h6>
                                        <div class="price-box">
                                            <span class="price-regular">$@top.Price.ToString("##.00")</span>
                                            <span class="price-old"><del>$@top.DisPrice.ToString("##.00")</del></span>
                                        </div>
                                        <div class="ratings">
                                            <span><i class="@top.Icon"></i></span>
                                            <span><i class="@top.Icon"></i></span>
                                            <span><i class="@top.Icon"></i></span>
                                            <span><i class="@top.Icon"></i></span>
                                            <span><i class="@top.Icon"></i></span>
                                        </div>
                                        <div class="product-link-2">
                                            <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                            <a href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                                            <a href="#" data-toggle="modal" data-target="#quick_view">
                                                <span data-toggle="tooltip"
                                                      title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- product item start -->
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- top seller area end -->
    <!-- latest blog area start -->
    <section class="latest-blog-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.OurBlogs.Title</h2>
                        <p class="sub-title">@Model.OurBlogs.Desc</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15">

                        @foreach (var blog in Model.TopBlogs)
                        {
                            <div class="blog-post-item">
                                <div class="blog-thumb">
                                    <a asp-controller="Blog" asp-action="Index">
                                        <img src="assets/img/blog/@blog.Image" alt="blog thumb">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a href="blog-details.html">
                                            @blog.Title
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>@blog.Name</li>
                                        <li><span>On: </span>@blog.Date</li>
                                    </ul>
                                    <a asp-controller="Blog" asp-action="Index" class="read-more">Read More...</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- latest blog area end -->
    <!-- brand area start -->
    <div class="brand-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-active-carousel">
                        @foreach (var logo in Model.BrandLogos)
                        {
                            <div class="brand-item">
                                <a href="#">
                                    <img src="assets/img/brand/@logo.LogoSlider" alt="brand image">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand area end -->
</main>
<!-- main wrapper end -->
