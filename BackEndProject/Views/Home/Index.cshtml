@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}




<!-- main wrapper start -->
<main>
    <!-- hero slider section start -->
    <section class="hero-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                        @foreach (var item in Model.Sliders)
                        {
                            <div class="hero-single-slide">
                                <div class="hero-slider-item bg-img" data-bg="assets/img/slider/@item.Image">
                                    <div class="hero-slider-content slide-1">
                                        <h5 class="slide-subtitle">@item.Selling</h5>
                                        <h2 class="slide-title">@item.Desc</h2>
                                        <p class="slide-desc">@item.Title</p>
                                        <a href="shop.html" class="btn btn-hero">SHOP NOW</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- hero slider section end -->
    <!-- service features start -->
    <section class="service-policy-area">
        <div class="container">
            <div class="row">
                @foreach (var info in Model.Informations)
                {
                    <div class="col-lg-4">
                        <div class="service-policy-item mt-30 @info.Color">
                            <div class="policy-icon">
                                <img style="width:50px; height:50px;" src="~/assets/img/icon/@info.Image" alt="policy icon">
                            </div>
                            <div class="policy-content">
                                <h5 class="policy-title">@info.Title</h5>
                                <p class="policy-desc">@info.Desc</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- service features end -->
