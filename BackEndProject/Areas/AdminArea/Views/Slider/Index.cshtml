@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Inverse table</h4>
                        <p class="card-description">
                            Add class <code>.table-dark</code>
                        </p>
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Image </th>
                                    <th> Sale </th>
                                    <th> Title </th>
                                    <th> Desc </th>
                                    <th> Setting </th>

                                </tr>
                            </thead>

                            <tbbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @count </td>
                                        <td><img style="width:70px; height:70px; border-radius:50px;" src="~/assets/img/slider/@item.Image" alt="Slider" /> </td>
                                        <td>@item.Selling</td>
                                        <td>@item.Title</td>
                                        <td>@item.Desc</td>
                                        <td>
                                            <button type="button" class="btn btn-primary">Detail</button>
                                            <a asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id" type="button" class="btn btn-warning">Update</a>
                                            <a asp-controller="Slider" asp-action="Create" class="btn btn-success">Create</a>
                                            <form style="width:15px; height:5px;"  asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    count++;

                                }

                            </tbbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>