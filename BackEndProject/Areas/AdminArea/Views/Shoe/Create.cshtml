@model ShoeCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <h3>Shoe image</h3>
                <div class="form-group">
                    <label asp-for="Photos">Photo</label>
                    <input asp-for="Photos" class="form-control">
                    <span asp-validation-for="Photos" class="text-danger my-1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle">SubTitle</label>
                    <input asp-for="SubTitle" class=" form-control">
                    <span asp-validation-for="SubTitle" class="text-danger my-1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class=" form-control">
                    <span asp-validation-for="Title" class="text-danger my-1"></span>
                </div>
                <button class="btn btn-success">Create</button>
                <a asp-controller="Shoe" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

