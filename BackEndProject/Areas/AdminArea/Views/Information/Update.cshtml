@model InfoUpdateVM

@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <h3>Information image</h3>
                <div class="form-group">
                    <label asp-for="Photos">Photo</label>
                    <input asp-for="Photos" class="form-control">
                    <span asp-validation-for="Photos" class="text-danger my-1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class=" form-control">
                    <span asp-validation-for="Title" class="text-danger my-1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Description</label>
                    <input asp-for="Desc" class=" form-control">
                    <span asp-validation-for="Desc" class="text-danger my-1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color">Color</label>
                    <input asp-for="Color" class=" form-control">
                    <span asp-validation-for="Color" class="text-danger my-1"></span>
                </div>

                <button class="btn btn-success">Update</button>
                <a asp-controller="Information" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
